<% content_for :menu do %>
    <ul>
      <li><%= link_to "Discussions", :controller => "discussions", :action => "index" %></li>
      <li><%= link_to "Blogs", :controller => "blogs", :action => "index" %></li>
      <li class="current_page"><%= link_to "Documents", :controller => "documents", :action => "index" %></li>
    </ul>
<% end%>

<h1>Listing documents</h1>

<table>
  <tr>
    <th>Version</th>
    <th>Title</th>
    <th>Body</th>
    <th>Rating</th>
    <th>Allow comments</th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%=h document.version %></td>
    <td><%=h document.title %></td>
    <td><%=h document.body %></td>
    <td><%=h document.rating %></td>
    <td><%=h document.allow_comments %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New document', new_document_path %>