<% content_for :javascripts do %>
	<%= javascript_include_tag :fckeditor %>
<% end %>
<h1>New discussion</h1>

<% form_for(@discussion) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= fckeditor_textarea("discussion", "body", :toolbarSet => 'Simple', :width => '100%', :height => '200px') %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', discussions_path %>