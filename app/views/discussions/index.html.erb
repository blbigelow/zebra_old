<% content_for :menu do %>
    <ul>
      <li class="current_page"><%= link_to "Discussions", :controller => "discussions", :action => "index" %></li>
      <li><%= link_to "Blogs", :controller => "blogs", :action => "index" %></li>
      <li><%= link_to "Documents", :controller => "documents", :action => "index" %></li>
    </ul>
<% end%>

<% content_for :left_bar do %>
	<ul>
		<li>Top Users</li>
		<li>Popular Tags</li>
	</ul>
<% end %>

<h1>Listing discussions</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Rating</th>
    <th>Answered</th>
  </tr>

<% @discussions.each do |discussion| %>
  <tr>
    <td><%=h discussion.title %></td>
    <td><%=h discussion.body %></td>
    <td><%=h discussion.rating %></td>
    <td><%=h discussion.answered %></td>
    <td><%= link_to 'Show', discussion %></td>
    <td><%= link_to 'Edit', edit_discussion_path(discussion) %></td>
    <td><%= link_to 'Destroy', discussion, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New discussion', new_discussion_path %>